<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class = "PatchOperationFindMod">
        <mods>
            <li>
                LWM's Deep Storage
            </li>
        </mods>
        <match Class = "PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "MAG_LWM_BoxOne"]/label</xpath>
                    <value>
                        <label>prothean storage chamber</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "MAG_LWM_BoxOne"]/description</xpath>
                    <value>
                        <description>An indestructible archotech device containing a miniature black hole that allows for secure storage of large amounts of items. Can be placed on tables or other furniture.\n\nNote: Do NOT place it on any workbenches as colonist will try to “clear” it by hauling away each and every item stored inside whenever they try to use the workbench.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>