<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class = "PatchOperationFindMod">
        <mods>
            <li>
                Save Our Ship 2
            </li>
        </mods>
        <match Class = "PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "MAG_Ship_Engine_Small"]/label</xpath>
                    <value>
                        <label>prothean ship engine</label>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "MAG_ArchotechRepairingAura"]/description</xpath>
                    <value>
                        <description>A prothean engine. It uses prothean fragments as a fuel source, 10 fragments will fully fuel the engine. One of these is comparable to 25 standard engines.  Can't be used to launch a ship into orbit, due to build-in safety measures.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>