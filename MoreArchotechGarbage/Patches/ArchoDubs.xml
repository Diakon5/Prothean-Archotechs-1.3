<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class = "PatchOperationFindMod">
        <mods>
            <li>
                Dubs Bad Hygiene
            </li>
        </mods>
        <match Class = "PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName = "MAG_ArchotechWaterThing"]/description</xpath>
                    <value>
                        <description>A prothean device capable of taking care of any water problems. It generates it, pumps it, stores it and cleans it while requiring no power.</description>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>